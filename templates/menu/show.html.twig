{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ menu.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ menu.description }}</td>
            </tr>
             <tr>
                <th>Image</th>
                <td><img class="menu-imag" src="{{ asset(menu.image) }}"></td>
            </tr> 
        </tbody>
    </table>

    <a href="{{ path('app_menu_index') }}">Retour au liste de menu</a>

    <a href="{{ path('app_menu_edit', {'id': menu.id}) }}">Modifier</a>

    {{ include('menu/_delete_form.html.twig') }}
{% endblock %}
