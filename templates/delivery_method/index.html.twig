{% extends 'base.html.twig' %}

{% block title %}DeliveryMethod index{% endblock %}

{% block body %}
    <h1>DeliveryMethod index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Method_name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for delivery_method in delivery_methods %}
            <tr>
                <td>{{ delivery_method.id }}</td>
                <td>{{ delivery_method.methodName }}</td>
                <td>
                    <a href="{{ path('app_delivery_method_show', {'id': delivery_method.id}) }}">show</a>
                    <a href="{{ path('app_delivery_method_edit', {'id': delivery_method.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_delivery_method_new') }}">Create new</a>
{% endblock %}
