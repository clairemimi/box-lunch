{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}
{% block title %}Titre{% endblock %}
{% block body %}
<body>


    <!-- Corps de la page -->
    <div class="container mt-5">
    <div class="row">
      <div class="col-lg-4 col-md-6 mb-4 p-4">
                <div class="card">
                    <img src="{{ menu.image }}" class="card-img-top img-fluid" alt="">
                    <div class="card-body">
                        <h2 class="card-title">{{ menu.name }}</h2>
                        <h4 class="card-text">{{ menu.price }}</h4>
                        <p class="card-text">{{ menu.description }}</p>
                        
                    </div>
                </div>
         
     
        </div>
    </div>
</div>
    
      

</body>
{% endblock %}
